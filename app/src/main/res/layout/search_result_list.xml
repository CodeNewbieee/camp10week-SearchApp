<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="240dp">

    <ImageView
        android:id="@+id/iv_searchlist"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:clipToOutline="true"
        android:src="@drawable/person_6"
        android:scaleType="centerCrop"
        android:background="@drawable/shape_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_searchlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/iv_searchlist"
        app:layout_constraintTop_toBottomOf="@+id/iv_searchlist" />

    <TextView
        android:id="@+id/tv_searchlist_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/iv_searchlist"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchlist_title" />

</androidx.constraintlayout.widget.ConstraintLayout>