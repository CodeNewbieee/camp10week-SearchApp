<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="240dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_search_thumbnail"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_radius"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/person_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_search_favorite"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_star_check"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_search_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/iv_search_thumbnail" />

    <TextView
        android:id="@+id/tv_search_sitename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/iv_search_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_search_thumbnail" />

    <TextView
        android:id="@+id/tv_search_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/iv_search_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_sitename" />

</androidx.constraintlayout.widget.ConstraintLayout>